@model Website.Data.About
@{
    ViewBag.Title = "About";
    Layout = "~/Views/Share/_LayoutPage.cshtml";
}
<link href="~/Contents/css/about.css" rel="stylesheet" />

<section class="section-banner">
    <div class="row">
        <div class="col-sm-12">
            <img class="img-banner" src="~/Uploads/Sliders/slide-1.jpg" alt="intro picture">
        </div>
    </div>
</section>

<section class="section-intro">
    <div class="row">
        <div class="col-sm-12">
            <hr>
            <h1 class="text-center"><strong>GIỚI THIỆU</strong></h1>
            <div class="text-justify description">
                @Html.Raw(HttpUtility.HtmlDecode(Model.Contents))
            </div>
        </div>
    </div>
</section>