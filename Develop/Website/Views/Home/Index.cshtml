@using Website.Data;
@model ModelHome
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Share/_LayoutPage.cshtml";
}
<section class="section-slide">
    <div class="row">
        <div class="col-sm-12">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @{
                        for (int i = 0; i < Model.Sliders.Count; i++)
                        {
                            if (i == 0)
                            {
                                <li data-target="#carousel-example-generic" data-slide-to="@i" class="active"></li>
                            }
                            else
                            {
                                <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
                            }
                        }
                    }
                </ol>

                <div class="carousel-inner" role="listbox">

                    @{
                        bool IsFirst=true;
                        foreach (Slide row in Model.Sliders)
                        {
                            if (IsFirst)
                            {
                                IsFirst = false;
                                <div class="item active">
                                    <img src="@row.Image">
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <img src="@row.Image">
                                </div>
                            }
                        }
                    }
                </div>
                <a class="left slide-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <i class="fa fa-chevron-left" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right slide-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <i class="fa fa-chevron-right" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</section>

<section class="section-wellcome">
    <div class="row">
        <div class="col-sm-8 clearfix wellcome-block">
            <h1 class="text-center"><strong>GIỚI THIỆU</strong></h1>
            <div class="text-justify description">
                @Html.Raw(HttpUtility.HtmlDecode(Model.about.ShortContent))
            </div>
            <a href="/home/about" class="btn btn-default pull-right">Xem chi tiết</a>
        </div>
        <div class="col-sm-4 clearfix news-list">
            @{
                int j = 1;
                foreach (Product row in Model.Products)
                {
                    if (j <= 3)
                    {
                        <div class="item clearfix">
                            <span class="top top-@j">@j</span>
                            <h4 class="text-uppercase"><a href="#">@row.Name</a></h4>
                            <p>@row.ShortDescription</p>
                        </div>
                    }
                    else
                    {
                        break;
                    }
                    j++;
                }
            }
        </div>
    </div>
</section>

